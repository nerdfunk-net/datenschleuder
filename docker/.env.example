# Docker Compose Environment Variables
# Copy this file to .env and customize as needed

# Frontend Configuration
FRONTEND_PORT=3000

# Backend Configuration (backend port is fixed at 8000 inside the container)

# Database Configuration
POSTGRES_DB=cockpit
POSTGRES_USER=cockpit
POSTGRES_PASSWORD=cockpit123

# Redis Configuration
COCKPIT_REDIS_PASSWORD=changeme

# Nautobot Integration
NAUTOBOT_URL=http://localhost:8080
NAUTOBOT_TOKEN=your_nautobot_token_here
NAUTOBOT_TIMEOUT=30

# Security
SECRET_KEY=your-secret-key-change-this-in-production

# Logging
LOG_LEVEL=INFO
